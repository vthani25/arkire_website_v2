---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "PPC Advertising Basics: A Beginner's Guide",
    slug: "ppc-basics",
    date: "2025-06-25",
    description: 'PPC ads feel confusing? We got you. Learn how pay-per-click works, the different types, and how Gen Z brands can use it to grow, one click at a time.',
  },
  {
    title: "The Future of AI-Assisted Writing and Editing",
    slug: "ai-writing",
    date: "2025-06-25",
    description: 'AI writing tools are changing how we write, better or worse? Discover how these tools impact creativity, ethics, and the job market, and how Gen-Z can use it without losing their voice.',
  },
];
const title = "Arkire ‚Äî Articles"
const description = "Read original articles by Arkire covering teen marketing, branding trends, Gen Z creative strategies, and real-world lessons from the frontlines of building in public.";
const keywords = "arkire blog, gen z branding, content strategy, youth marketing, marketing tips, creative writing, brand building, social media marketing, storytelling for startups, digital marketing for teens, teen entrepreneurship, marketing articles, arkire articles, gen z marketing trends, branding for teens"
---


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <title>{title}</title>
  <link rel="icon" href="/assets/mascot_main.png" type="image/png">
</head>

<Layout>
{/* Top Navbar */}
<nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
  <div class="flex justify-between items-center px-4 md:px-8 py-4">
    <img src="/assets/long_light1.png" alt="logo" class="max-w-20" />

    {/* Desktop Menu */}
    <ul class="hidden md:flex gap-6 text-sm font-medium text-gray-700">
      <li><a href="/" class="hover:text-arkire-orange">Home</a></li>
      <li><a href="/socials" class="hover:text-arkire-orange">Socials</a></li>
      <li><a href="/team" class="hover:text-arkire-orange">Team</a></li>
      <li><a href="/articles" class="hover:text-arkire-orange">Articles</a></li>
    </ul>

    {/* Mobile Hamburger */}
    <button
      id="menu-toggle"
      class="md:hidden text-gray-600 focus:outline-none"
      aria-label="Toggle Menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"
        />
      </svg>
    </button>
  </div>

  {/* Mobile Dropdown Menu */}
  <ul
    id="mobile-menu"
    class="hidden flex-col gap-4 px-4 pb-4 text-sm font-medium text-gray-700 md:hidden"
  >
    <li><a href="/" class="block py-2 hover:text-arkire-orange">Home</a></li>
    <li><a href="/socials" class="block py-2 hover:text-arkire-orange">Socials</a></li>
    <li><a href="/team" class="block py-2 hover:text-arkire-orange">Team</a></li>
    <li><a href="/articles" class="block py-2 hover:text-arkire-orange">Articles</a></li>
  </ul>

  <script>
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    menuToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</nav>


  <section class="min-h-screen max-w-4xl mx-auto py-12 px-6">
    <h1 class="text-4xl font-extrabold mb-8 text-orange-600">üìù Articles</h1>

    <div class="space-y-8">
      {posts.map(post => (
        <a href={`/blog/${post.slug}`} class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
          <h2 class="text-2xl font-bold text-orange-500">{post.title}</h2>
          <p class="text-sm text-gray-600">{post.date}</p>
          <p class="mt-2 text-gray-700">{post.description}</p>
        </a>
      ))}
    </div>
  </section>
  {/* Footer */}
    <footer class="bg-[#2c2b2b] text-white py-6 px-8 ">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-6 sm:gap-10 md:text-left">
          <div>
            <img src="/assets/long_dark.png" alt="footer" class="max-w-20"/>
            <address class="not-italic text-sm">
              <a href="mailto:arkire.ma@gmail.com" class="underline hover:text-orange-300">arkire.ma@gmail.com</a><br/>
              Ontario, Canada
            </address>
          </div>
          <div>
            <h4 class="font-bold text-lg mb-2">Newsletter</h4>
            <a href="https://arkzette.beehiiv.com/subscribe" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-400/80 underline">Subscribe to Arkzette</a>
          </div>
          <div>
            <h4 class="font-bold text-lg mb-2">Discord</h4>
            <a href="https://discord.gg/yj2Mex9aHG"
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-400/80 underline">Join our Discord Server</a>
          </div>
          <div>
            <h4 class="font-bold text-lg mb-2">Follow Us</h4>
            <div class="flex gap-4">
              <a href="https://www.linkedin.com/company/arkire/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn">
                <img src="/assets/linkedin_logo.png" alt="LinkedIn" class="w-12 h-12" />
              </a>
              {/* Change to Insta logo */}
              <a 
              href="https://www.instagram.com/arkireapp/" 
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Instagram">
                <img src="/assets/instagram_logo.png" alt="Instagram" class="w-12 h-12" />
              </a>
            </div>
          </div>
        </div>
    </footer>

</Layout>
